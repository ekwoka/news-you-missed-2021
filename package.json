{
  "name": "newsreflection",
  "version": "1.0.3",
  "description": "A site made for Webjam Winter 2022",
  "scripts": {
    "build": "preact build --prerenderUrls ./prerender-urls.js",
    "serve": "pnpm build; netlify dev",
    "dev": "open http://0.0.0.0:8080; preact watch --prerenderUrls ./prerender-urls.js",
    "lint": "eslint src && prettier --check src",
    "lint-fix": "eslint --fix src && prettier --write src",
    "test": "jest",
    "upgrade": "ncu -u && pnpm i && pnpm build && git commit -S -am ':arrow_up: Dependencies' && pnpm version patch"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.3.1",
    "autoprefixer": "^10.4.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.4.0",
    "eslint": "^8.12.0",
    "eslint-config-preact": "^1.3.0",
    "pnpm": "^6.32.3",
    "postcss": "^8.4.12",
    "preact-cli": "3.3.5",
    "prettier": "^2.6.1",
    "sirv-cli": "2.0.2"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@tailwindcss/typography": "^0.5.2",
    "dotenv": "^16.0.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "lunr": "^2.3.9",
    "markdown-to-jsx": "^7.1.7",
    "node-fetch": "^3.2.3",
    "preact": "10.6.6",
    "preact-cli-plugin-netlify": "1.6.0",
    "preact-render-to-string": "^5.1.20",
    "preact-router": "^4.0.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "react": "npm:preact@^10.6.6",
    "react-dom": "npm:preact@^10.6.6",
    "react-intersection-observer": "^8.33.1",
    "react-svg": "^14.1.16",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "cssnano@<5.0.0": ">=5.0.15",
      "follow-redirects@<1.14.8": ">=1.14.8"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekwoka/newsreflection.git"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.js",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "author": "Eric Kwoka",
  "license": "ISC"
}
