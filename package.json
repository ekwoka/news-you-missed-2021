{
  "name": "newsreflection",
  "version": "0.4.1",
  "description": "A site made for Webjam Winter 2022",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "upgrade": "ncu -u && pnpm i && git add . && git commit -m ':arrow_up: Dependencies' && pnpm version patch"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-preact": "^1.3.0",
    "postcss": "^8.4.5",
    "preact-cli": "^3.3.3",
    "sirv-cli": "2.0.2"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@tailwindcss/typography": "^0.5.0",
    "jest": "^27.4.7",
    "jest-preset-preact": "^4.0.5",
    "markdown-to-jsx": "^7.1.6",
    "netlify-cms-app": "^2.15.63",
    "netlify-identity-widget": "^1.9.2",
    "preact": "^10.6.4",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^4.0.0",
    "react": "npm:preact@^10.6.4",
    "react-dom": "npm:preact@^10.6.4",
    "react-svg": "^14.1.8",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.4"
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "cssnano@<5.0.0": ">=5.0.15"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekwoka/newsreflection.git"
  },
  "author": "Eric Kwoka",
  "license": "ISC"
}
